@model IEnumerable<CRUD_PRACTICE_ENTITY.Models.Employee>
@{ 

}
<a asp-action="Create" asp-controller="Employee" class=" btn btn-outline-danger" > Create</a>

<table class="table table-bordered">
    <thead>
        <tr class="table table-danger text-center">
            <th>Name</th>

            <th>Email</th>

            <th>MobileNo</th>

            <th>Address</th>
    </thead>



    </tr>
    @foreach (var employee in Model)
    {
<tr class="text-center ">
    <td>@employee.Name</td>
    <td>@employee.Email</td>
    <td>@employee.MobileNo</td>
    <td>@employee.Address</td>
    <td>
        <a asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.Id"  class=" btn btn-outline-danger" onclick="return confirm('Are you want to Edit ')"> Edit</a>

    </td>
    <td>
        <a asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.Id" class=" btn btn-outline-danger" onclick="return confirm('Are you want to delete')"> Delete</a>

    </td>
</tr>
    }
</table>